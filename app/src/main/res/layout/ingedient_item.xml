<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ing_count"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/autoCompleteTextView2"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:maxLength="5" />

    <Spinner
        android:id="@+id/unit_spinner"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/ing_count"
        android:layout_marginStart="7dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/ing_count"
        android:background="@android:color/transparent"
        android:popupBackground="@android:color/background_light"
        android:spinnerMode="dropdown" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView2"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:completionHint="Select Ingredient"
        android:completionThreshold="1"
        android:hint="Enter Ingredient"
        android:maxLength="25"
        android:maxLines="1"
        android:singleLine="true" />

</RelativeLayout>